<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :detail %>
    <%= form.text_area :detail %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Blog.statuses.keys.to_a, {} %>
  </div>

  <div class="field">
    <%= form.label :finished_at %>
    <%= form.datetime_field :finished_at %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
